generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum Category {
  Warning
  Information
  Urgent
}
model Parent {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  children Child[]
}
model Child {
  id Int @id @default(autoincrement())
  name String
  grade String
  parent Parent @relation(fields: [parentId], references: [id])
  parentId Int
  Incidents Incident[]
}
model Incident {
  id Int @id @default(autoincrement())
  title String
  description String
  category Category
  child Child @relation(fields: [childId], references: [id])
  childId Int
  occurredAt DateTime 
}

model Admin {
  id Int @id @default(autoincrement())
  username String @unique
  password String
}